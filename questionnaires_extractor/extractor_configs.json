{
	"logLevels": "ERROR|INFO|DEBUG",
	"database": {
		"loadUrlsFromCrawler": true,
		"crawler": {
			"name": "tcc_crawler",
			"host": "localhost:5432",
			"login": "postgres",
			"password": "123"
		},
		"extractor": {
			"name": "tcc_extractor",
			"host": "localhost:5432",
			"login": "postgres",
			"password": "123"
		}
	},
	"crawler": {
		"numberOfCrawlers": 5,
		"crawlStorageFolder": "./tmp",
		"politenessDelay": 500,
		"maxDepthOfCrawling": 0,
		"maxPagesToFetch": -1,
		"includeBinaryContentInCrawling": false,
		"resumableCrawling": false	
	},
	"seeds": [
		"https://www.survio.com/modelo-de-pesquisa/feedback-sobre-servico",
		"https://www.survio.com/modelo-de-pesquisa/pesquisa-de-preco-do-produto",
		"https://www.survio.com/modelo-de-pesquisa/pesquisa-de-percepcao-da-publicidade-e-de-sua-eficiencia",
		"https://www.survio.com/modelo-de-pesquisa/pesquisa-da-notoriedade-da-marca",
		"https://www.survio.com/modelo-de-pesquisa/pesquisa-da-experiencia-de-compra"
	],
	"heuristics": {
		"minQuestionsOnQuestionnaire": 2,
		"distBetweenNearNodes": {
			"deweyWeight": 1000,
			"height": 3
		},
		"distBetweenTextsInsideQuestionnaire": {
			"height": 4
		},
		"distBetweenCompAndText": {
			"height": 2,
			"maxHeight": 3
		},
		"distBetweenDescAndQuestion": {
			"height": 2,
			"maxHeight": 4
		},
		"distBetweenGroupAndFirstQuestion": {
			"height": 1,
			"width": 7
		},
		"distBetweenNextText": {
			"height": 2,
			"width": 4
		},
		"distBetweenTextsInQuestionGroup": {
			"height": 1,
			"width": 5
		},
		"distBetweenDescriptions": {
			"width": 4,
			"height": 1
		}
	}
}